<% content_for :title, "#{@recipe.title} - Alchefeast" %>

<%= turbo_stream_from "recipe_#{@recipe.id}" %>

<div class="container-fluid">

  <div class="container">
    <!-- Back Button -->
    <div class="row mb-3">
      <div class="col-12">
        <%= link_to recipes_path, class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left me-2"></i>Back to Recipes
        <% end %>
      </div>
    </div>

    <!-- Recipe Header -->
    <div class="row mb-4">
      <div class="col-lg-8">
        <h1 class="display-5 fw-bold text-primary mb-3"><%= @recipe.title %></h1>
        
        <!-- Recipe Meta Info -->
        <div class="row g-3 mb-4">
          <% if @recipe.total_time.present? %>
            <div class="col-6 col-md-3">
              <div class="d-flex align-items-center">
                <div class="bg-primary text-white rounded-circle p-2 me-3">
                  <i class="bi bi-clock"></i>
                </div>
                <div>
                  <div class="fw-semibold"><%= @recipe.total_time %> min</div>
                  <small class="text-muted">Total Time</small>
                </div>
              </div>
            </div>
          <% end %>
          
          <% if @recipe.prep_time.present? %>
            <div class="col-6 col-md-3">
              <div class="d-flex align-items-center">
                <div class="bg-info text-white rounded-circle p-2 me-3">
                  <i class="bi bi-stopwatch"></i>
                </div>
                <div>
                  <div class="fw-semibold"><%= @recipe.prep_time %> min</div>
                  <small class="text-muted">Prep Time</small>
                </div>
              </div>
            </div>
          <% end %>
          
          <% if @recipe.cook_time.present? %>
            <div class="col-6 col-md-3">
              <div class="d-flex align-items-center">
                <div class="bg-success text-white rounded-circle p-2 me-3">
                  <i class="bi bi-fire"></i>
                </div>
                <div>
                  <div class="fw-semibold"><%= @recipe.cook_time %> min</div>
                  <small class="text-muted">Cook Time</small>
                </div>
              </div>
            </div>
          <% end %>
          
          <% if @recipe.ratings.present? %>
            <div class="col-6 col-md-3">
              <div class="d-flex align-items-center">
                <div class="bg-warning text-white rounded-circle p-2 me-3">
                  <i class="bi bi-star-fill"></i>
                </div>
                <div>
                  <div class="fw-semibold"><%= number_with_precision(@recipe.ratings, precision: 1) %>/5</div>
                  <small class="text-muted">Rating</small>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Recipe Details -->
        <div class="row g-3 mb-4">
          <% if @recipe.category.present? %>
            <div class="col-6 col-md-4">
              <div class="d-flex align-items-center">
                <div class="bg-secondary text-white rounded-circle p-2 me-3">
                  <i class="bi bi-bookmark"></i>
                </div>
                <div>
                  <div class="fw-semibold"><%= @recipe.category %></div>
                  <small class="text-muted">Category</small>
                </div>
              </div>
            </div>
          <% end %>
          
          <% if @recipe.cuisine.present? %>
            <div class="col-6 col-md-4">
              <div class="d-flex align-items-center">
                <div class="bg-dark text-white rounded-circle p-2 me-3">
                  <i class="bi bi-globe"></i>
                </div>
                <div>
                  <div class="fw-semibold"><%= @recipe.cuisine %></div>
                  <small class="text-muted">Cuisine</small>
                </div>
              </div>
            </div>
          <% end %>
          
          <% if @recipe.author.present? %>
            <div class="col-6 col-md-4">
              <div class="d-flex align-items-center">
                <div class="bg-purple text-white rounded-circle p-2 me-3">
                  <i class="bi bi-person"></i>
                </div>
                <div>
                  <div class="fw-semibold"><%= @recipe.author %></div>
                  <small class="text-muted">Author</small>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      
      <div class="col-lg-4">
        <% if @recipe.image_url.present? %>
          <img src="<%= @recipe.image_url %>" class="img-fluid rounded shadow" alt="<%= @recipe.title %>">
        <% else %>
          <div class="bg-light rounded shadow d-flex align-items-center justify-content-center" style="height: 300px;">
            <div class="text-center text-muted">
              <i class="bi bi-image fs-1 mb-2 d-block"></i>
              <span>No image available</span>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="row">
      <!-- Ingredients -->
      <div class="col-lg-5 mb-4">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-header bg-primary text-white">
            <h4 class="card-title mb-0">
              <i class="bi bi-basket2-fill me-2"></i>Ingredients
              <span class="badge bg-light text-primary ms-2"><%= @recipe_ingredients.count %></span>
            </h4>
          </div>
          <div class="card-body">
            <% if @recipe_ingredients.any? %>
              <ul class="list-unstyled mb-0">
                <% @recipe_ingredients.each do |recipe_ingredient| %>
                  <li class="d-flex justify-content-between align-items-start py-2 border-bottom">
                    <div class="me-3">
                      <div class="fw-medium"><%= recipe_ingredient.ingredient.name.titleize %></div>
                      <% if recipe_ingredient.raw_text != recipe_ingredient.ingredient.name %>
                        <small class="text-muted"><%= recipe_ingredient.raw_text %></small>
                      <% end %>
                    </div>
                    <% if recipe_ingredient.quantity.present? && recipe_ingredient.unit.present? %>
                      <span class="badge bg-secondary text-nowrap">
                        <%= number_with_precision(recipe_ingredient.quantity, precision: 2, strip_insignificant_zeros: true) %>
                        <%= recipe_ingredient.unit %>
                      </span>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            <% else %>
              <p class="text-muted mb-0">No ingredients listed for this recipe.</p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Recipe Information -->
      <div class="col-lg-7">
        <!-- Recipe Statistics -->
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-header bg-info text-white">
            <h4 class="card-title mb-0">
              <i class="bi bi-graph-up me-2"></i>Recipe Information
            </h4>
          </div>
          <div class="card-body">
            <div class="row text-center">
              <div class="col-6 col-md-3">
                <div class="border-end">
                  <div class="fs-4 fw-bold text-primary">
                    <%= @recipe_ingredients.count %>
                  </div>
                  <small class="text-muted">Ingredients</small>
                </div>
              </div>
              <div class="col-6 col-md-3">
                <div class="border-end">
                  <div class="fs-4 fw-bold text-success">
                    <%= @recipe.total_time || '-' %>
                    <% if @recipe.total_time.present? %>
                      <small class="fs-6">min</small>
                    <% end %>
                  </div>
                  <small class="text-muted">Total Time</small>
                </div>
              </div>
              <div class="col-6 col-md-3">
                <div class="border-end">
                  <div class="fs-4 fw-bold text-warning">
                    <% if @recipe.ratings.present? %>
                      <%= number_with_precision(@recipe.ratings, precision: 1) %>
                      <small class="fs-6">/5</small>
                    <% else %>
                      -
                    <% end %>
                  </div>
                  <small class="text-muted">Rating</small>
                </div>
              </div>
              <div class="col-6 col-md-3">
                <div class="fs-4 fw-bold text-danger">
                  <%= Date.current.year - @recipe.created_at.year == 0 ? 'New' : "#{Date.current.year - @recipe.created_at.year}y" %>
                </div>
                <small class="text-muted">Age</small>
              </div>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="card border-0 shadow-sm">
          <div class="card-body">
            <div class="row g-2">
              <div class="col-md-4">
                <button class="btn btn-outline-success w-100" onclick="window.print()">
                  <i class="bi bi-printer me-2"></i>Print Recipe
                </button>
              </div>
              <div class="col-md-8 d-flex align-items-center">
                <%= button_to ask_ai_recipe_path(@recipe), method: :post, class: "btn btn-primary ms-auto",
                              data: { turbo: true, turbo_confirm: nil } do %>
                  <i class="bi bi-magic me-2"></i>Ask Alchemist how to cook it
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-3">
          <%= render partial: "recipes/ai_instructions", locals: { recipe: @recipe } %>
        </div>
      </div>
    </div>

    <!-- Additional Information -->
    <% if @recipe.prep_time.present? || @recipe.cook_time.present? %>
      <div class="row mt-5">
        <div class="col-12">
          <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
              <h5 class="card-title mb-0">
                <i class="bi bi-lightbulb text-warning me-2"></i>Cooking Information
              </h5>
            </div>
            <div class="card-body">
              <div class="row">
                <% if @recipe.prep_time.present? || @recipe.cook_time.present? %>
                  <div class="col-md-6">
                    <h6 class="text-primary">
                      <i class="bi bi-clock-history me-1"></i>Time Breakdown
                    </h6>
                    <ul class="list-unstyled">
                      <% if @recipe.prep_time.present? %>
                        <li class="mb-2">• Prep time: <%= @recipe.prep_time %> minutes</li>
                      <% end %>
                      <% if @recipe.cook_time.present? %>
                        <li class="mb-2">• Cook time: <%= @recipe.cook_time %> minutes</li>
                      <% end %>
                      <% if @recipe.total_time.present? %>
                        <li class="mb-2">• Total time: <%= @recipe.total_time %> minutes</li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
