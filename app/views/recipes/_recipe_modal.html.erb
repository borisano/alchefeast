<%# Recipe Detail Modal/Drawer %>
<%= turbo_frame_tag "recipe_modal", data: { controller: "recipe-modal" } do %>
  <div class="offcanvas offcanvas-end show" 
       tabindex="-1" 
       id="recipeModal" 
       data-bs-backdrop="true" 
       data-bs-keyboard="true" 
       data-recipe-modal-target="modal"
       style="width: 50%; min-width: 600px;">
    <div class="offcanvas-header border-bottom">
      <h5 class="offcanvas-title fw-bold text-primary">
        <i class="bi bi-book me-2"></i><%= @recipe.title %>
      </h5>
      <button type="button" 
              class="btn-close" 
              data-action="click->recipe-modal#close"
              aria-label="Close"></button>
    </div>
    
    <div class="offcanvas-body p-0">
      <div class="container-fluid p-4">
        <!-- Recipe Image -->
        <% if @recipe.image_url.present? %>
          <div class="row mb-4">
            <div class="col-12">
              <img src="<%= @recipe.image_url %>" class="img-fluid rounded shadow-sm w-100" alt="<%= @recipe.title %>" style="max-height: 250px; object-fit: cover;">
            </div>
          </div>
        <% end %>

        <!-- Recipe Meta Info -->
        <div class="row g-3 mb-4">
          <% if @recipe.total_time.present? %>
            <div class="col-6">
              <div class="d-flex align-items-center">
                <div class="bg-primary text-white rounded-circle p-2 me-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                  <i class="bi bi-clock fs-6"></i>
                </div>
                <div>
                  <div class="fw-semibold small"><%= @recipe.total_time %> min</div>
                  <small class="text-muted">Total Time</small>
                </div>
              </div>
            </div>
          <% end %>
          
          <% if @recipe.ratings.present? %>
            <div class="col-6">
              <div class="d-flex align-items-center">
                <div class="bg-warning text-white rounded-circle p-2 me-2" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                  <i class="bi bi-star-fill fs-6"></i>
                </div>
                <div>
                  <div class="fw-semibold small"><%= number_with_precision(@recipe.ratings, precision: 1) %>/5</div>
                  <small class="text-muted">Rating</small>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Recipe Details -->
        <div class="row g-3 mb-4">
          <% if @recipe.category.present? %>
            <div class="col-6">
              <div class="d-flex align-items-center">
                <div class="bg-secondary text-white rounded-circle p-2 me-2" style="width: 35px; height: 35px; display: flex; align-items: center; justify-content: center;">
                  <i class="bi bi-bookmark fs-6"></i>
                </div>
                <div>
                  <div class="fw-semibold small"><%= @recipe.category %></div>
                  <small class="text-muted">Category</small>
                </div>
              </div>
            </div>
          <% end %>
          
          <% if @recipe.cuisine.present? %>
            <div class="col-6">
              <div class="d-flex align-items-center">
                <div class="bg-dark text-white rounded-circle p-2 me-2" style="width: 35px; height: 35px; display: flex; align-items: center; justify-content: center;">
                  <i class="bi bi-globe fs-6"></i>
                </div>
                <div>
                  <div class="fw-semibold small"><%= @recipe.cuisine %></div>
                  <small class="text-muted">Cuisine</small>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Ingredients -->
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-header bg-primary text-white py-2">
            <h6 class="card-title mb-0">
              <i class="bi bi-basket2-fill me-2"></i>Ingredients
              <span class="badge bg-light text-primary ms-2"><%= @recipe_ingredients.count %></span>
            </h6>
          </div>
          <div class="card-body p-3">
            <% if @recipe_ingredients.any? %>
              <div class="row">
                <% @recipe_ingredients.each_with_index do |recipe_ingredient, index| %>
                  <div class="col-12 mb-2">
                    <div class="d-flex justify-content-between align-items-center py-1 <%= 'border-bottom' if index < @recipe_ingredients.count - 1 %>">
                      <div class="me-2">
                        <div class="fw-medium small"><%= recipe_ingredient.ingredient.name.titleize %></div>
                        <% if recipe_ingredient.raw_text != recipe_ingredient.ingredient.name %>
                          <small class="text-muted" style="font-size: 0.75rem;"><%= recipe_ingredient.raw_text %></small>
                        <% end %>
                      </div>
                      <% if recipe_ingredient.quantity.present? && recipe_ingredient.unit.present? %>
                        <span class="badge bg-secondary text-nowrap small">
                          <%= number_with_precision(recipe_ingredient.quantity, precision: 2, strip_insignificant_zeros: true) %>
                          <%= recipe_ingredient.unit %>
                        </span>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-muted mb-0 small">No ingredients listed for this recipe.</p>
            <% end %>
          </div>
        </div>

        <!-- Recipe Statistics -->
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-header bg-info text-white py-2">
            <h6 class="card-title mb-0">
              <i class="bi bi-graph-up me-2"></i>Recipe Information
            </h6>
          </div>
          <div class="card-body p-3">
            <div class="row text-center g-3">
              <div class="col-6">
                <div class="border-end">
                  <div class="fs-5 fw-bold text-primary">
                    <%= @recipe_ingredients.count %>
                  </div>
                  <small class="text-muted">Ingredients</small>
                </div>
              </div>
              <div class="col-6">
                <div class="fs-5 fw-bold text-success">
                  <%= @recipe.total_time || '-' %>
                  <% if @recipe.total_time.present? %>
                    <small class="fs-6">min</small>
                  <% end %>
                </div>
                <small class="text-muted">Total Time</small>
              </div>
              <% if @recipe.ratings.present? %>
                <div class="col-6">
                  <div class="border-end">
                    <div class="fs-5 fw-bold text-warning">
                      <%= number_with_precision(@recipe.ratings, precision: 1) %>
                      <small class="fs-6">/5</small>
                    </div>
                    <small class="text-muted">Rating</small>
                  </div>
                </div>
              <% end %>
              <div class="col-6">
                <div class="fs-5 fw-bold text-danger">
                  <%= Date.current.year - @recipe.created_at.year == 0 ? 'New' : "#{Date.current.year - @recipe.created_at.year}y" %>
                </div>
                <small class="text-muted">Age</small>
              </div>
            </div>
          </div>
        </div>

        <!-- Additional Information -->
        <% if @recipe.prep_time.present? || @recipe.cook_time.present? %>
          <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-light py-2">
              <h6 class="card-title mb-0">
                <i class="bi bi-lightbulb text-warning me-2"></i>Cooking Information
              </h6>
            </div>
            <div class="card-body p-3">
              <div class="row">
                <div class="col-12">
                  <h6 class="text-primary small">
                    <i class="bi bi-clock-history me-1"></i>Time Breakdown
                  </h6>
                  <ul class="list-unstyled small">
                    <% if @recipe.prep_time.present? %>
                      <li class="mb-1">• Prep time: <%= @recipe.prep_time %> minutes</li>
                    <% end %>
                    <% if @recipe.cook_time.present? %>
                      <li class="mb-1">• Cook time: <%= @recipe.cook_time %> minutes</li>
                    <% end %>
                    <% if @recipe.total_time.present? %>
                      <li class="mb-1">• Total time: <%= @recipe.total_time %> minutes</li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Action Buttons -->
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-body p-3">
            <div class="row g-2">
              <div class="col-6">
                <%= link_to recipe_path(@recipe), 
                    class: "btn btn-outline-primary btn-sm w-100",
                    data: { turbo_frame: "_top" } do %>
                  <i class="bi bi-eye me-1"></i>Full View
                <% end %>
              </div>
              <div class="col-6">
                <button class="btn btn-outline-success btn-sm w-100" onclick="window.print()">
                  <i class="bi bi-printer me-1"></i>Print
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
